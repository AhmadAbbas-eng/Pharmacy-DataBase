<AnchorPane prefHeight="453.0" prefWidth="626.0"
	xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.CustomerController">
	<children>
		<TableView fx:id="customerTable" layoutX="22.0"
			layoutY="70.0" onMousePressed="#tableOnMousePressed"
			prefHeight="294.0" prefWidth="582.0"
			style="-fx-background-color: transparent;"
			stylesheets="@../../CSS/table.css" AnchorPane.bottomAnchor="89.0"
			AnchorPane.leftAnchor="22.0" AnchorPane.rightAnchor="22.0"
			AnchorPane.topAnchor="70.0">
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
			<columns>
				<TableColumn fx:id="nidColumn"
					prefWidth="60.79998701810837" text="National ID" />
				<TableColumn fx:id="nameColumn" minWidth="20.0"
					prefWidth="70.40002822875977" text="Name" />
				<TableColumn fx:id="debtColumn" minWidth="50.0"
					prefWidth="64.00003051757812" text="Debt" />
			</columns>
			<opaqueInsets>
				<Insets />
			</opaqueInsets>
		</TableView>
		<TextField fx:id="searchBox" layoutX="19.0" layoutY="20.0"
			promptText="Search ..." stylesheets="@../../CSS/search.css"
			AnchorPane.leftAnchor="22.0" AnchorPane.topAnchor="20.0" />
		<ComboBox fx:id="fieldSelector" layoutX="188.0"
			layoutY="20.0" onAction="#filterList" prefWidth="150.0"
			promptText="-Specify Field-" stylesheets="@../../CSS/combobox.css"
			AnchorPane.leftAnchor="188.0" AnchorPane.topAnchor="20.0" />
		<Button fx:id="showInfoButton" layoutX="32.0" layoutY="395.0"
			mnemonicParsing="false" onAction="#showInfoOnAction"
			prefWidth="140.0" stylesheets="@../../CSS/button.css"
			text="Show Conatct Info" AnchorPane.bottomAnchor="32.0"
			AnchorPane.leftAnchor="22.0" />
		<ImageView fx:id="editButton" fitHeight="25.0"
			fitWidth="20.0" layoutX="577.0" layoutY="76.0"
			onMouseEntered="#editOnMouseEntered"
			onMouseExited="#editOnMouseExited"
			onMousePressed="#editOnMousePressed"
			onMouseReleased="#editOnMouseReleased" pickOnBounds="true"
			preserveRatio="true" AnchorPane.rightAnchor="29.0"
			AnchorPane.topAnchor="76.0">
			<image>
				<Image url="@../../Icons/icons8-edit-30b.png" />
			</image>
		</ImageView>
		<Button fx:id="showProductsButton" layoutX="172.0"
			layoutY="395.0" mnemonicParsing="false"
			onAction="#showProductsOnAction" prefWidth="140.0"
			stylesheets="@../../CSS/button.css" text="Show Bought Products"
			AnchorPane.bottomAnchor="32.0" AnchorPane.leftAnchor="172.0" />
		<CheckBox fx:id="haveDebt" layoutX="373.0" layoutY="24.0"
			lineSpacing="100.0" mnemonicParsing="false"
			nodeOrientation="RIGHT_TO_LEFT" onAction="#filterList"
			text="Have Debt" textFill="#1d6f84" AnchorPane.leftAnchor="373.0"
			AnchorPane.topAnchor="24.0">
			<font>
				<Font size="14.0" />
			</font>
			<opaqueInsets>
				<Insets />
			</opaqueInsets>
		</CheckBox>
	</children>
</AnchorPane>
